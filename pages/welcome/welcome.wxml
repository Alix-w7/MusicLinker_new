<view class="container">
  <view class="userinfo">
       <block wx:if="{{!hasUserInfo && canIUse}}" >
      <image class="app-avatar" src="/images/avatar/app_avatar.jpg" mode="cover"></image>
      <button class="start-btn" open-type="getUserInfo" bindgetuserinfo="getAllAuthorized">一键登录和配置</button>
    </block>
    <block wx:else>
      <image class="user-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
      <text class="user-nickname">{{userInfo.nickName}}</text>
      <button class="enter-post-btn" catchtap="enterPostPage">开始你的音乐之旅吧!</button>
    </block> 
  </view>
</view>
